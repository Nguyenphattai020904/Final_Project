<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lớp đổ bóng (đậm hơn) -->
    <item
        android:left="4dp"
    android:top="4dp"
    android:right="8dp"
    android:bottom="8dp">
    <shape>
        <solid android:color="#CC000000" /> <!-- Màu bóng đậm hơn: rgba(0,0,0,0.8) -->
        <corners android:radius="12dp" />
    </shape>
</item>
    <!-- Lớp chính (giữ gradient nhẹ để tăng cảm giác 3D) -->
<item
android:left="0dp"
android:top="0dp"
android:right="2dp"
android:bottom="2dp">
<shape>
    <gradient
        android:startColor="#FFFFFF"
        android:endColor="#F5F5F5"
        android:angle="315" /> <!-- Gradient nhẹ để tạo hiệu ứng ánh sáng -->
    <corners android:radius="12dp" />
</shape>
</item>
    </layer-list>