<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="12dp"
    android:layout_marginTop="8dp"
    android:elevation="2dp"
    android:gravity="center_vertical">

    <!-- Voucher Icon -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/discount"
        android:scaleType="centerCrop"/>

    <!-- Voucher Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvSelectedVoucherDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount 20%"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FF5722"/>

        <TextView
            android:id="@+id/tvSelectedVoucherCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min order: â‚«200,000"
            android:textSize="14sp"
            android:textColor="#666666"/>
    </LinearLayout>

    <!-- Remove ImageButton -->
    <ImageButton
        android:id="@+id/btnRemoveVoucher"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Remove Voucher"
       />
</LinearLayout>
