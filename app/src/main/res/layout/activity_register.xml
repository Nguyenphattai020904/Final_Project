<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="30dp"
            android:background="@color/back_ground"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/logo_main" />

        <!-- Full Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ &amp; tên:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/edt_fullname"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_edit_text"
            android:hint="Nhập đầy đủ họ và tên"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginBottom="15dp" />

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="50dp"
            android:background="@drawable/border_edit_text"
            android:hint="Nhập email của bạn"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:layout_marginBottom="15dp" />

        <!-- Username -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="50dp"
            android:background="@drawable/border_edit_text"
            android:hint="Nhập số điện thoại của bạn"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="15dp" />

        <!-- Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sinh nhật:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/edt_date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ngày sinh nhật của bạn (YYYY-MM-DD)"
            android:textColor="@color/black"
            android:padding="10dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="10dp"
            android:focusable="false"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới tính:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />
        <RadioGroup
            android:id="@+id/rg_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginEnd="20dp"/>

            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"
                android:textColor="@color/black"
                android:textSize="16sp"/>

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật Khẩu:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_edit_text"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:drawableEnd="@drawable/ic_eye"
            android:textColor="@color/black"
            android:padding="12dp"
            android:layout_marginBottom="15dp" />

        <!-- Confirm Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận mật khẩu:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/edt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_edit_text"
            android:hint="Nhập lại mật khẩu để xác nhận"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/ic_eye"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_marginBottom="20dp" />

        <!-- Button Register -->
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/green_smoke"
            android:text="Đăng ký"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="15dp"
            app:cornerRadius="10dp"/>

        <!-- Back to Login -->
        <Button
            android:id="@+id/btn_back_to_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/black"
            android:text="Quay về đăng nhập"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:cornerRadius="10dp"/>

    </LinearLayout>

</ScrollView>
