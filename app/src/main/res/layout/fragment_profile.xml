<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back_ground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:divider="@android:color/transparent"
        android:showDividers="middle"
        android:dividerPadding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/border_vip"
            android:elevation="2dp"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp">

            <!-- Edit Personal Info -->
            <LinearLayout
                android:id="@+id/btn_show_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/person"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:background="@drawable/circle_background_white" />

                <!-- Personal Information -->
                <TextView
                    android:id="@+id/txt_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green_smoke"
                    android:text="TextView"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin chi tiết"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:textColor="@color/black"
            android:background="@color/back_ground" />

        <!-- Accumulation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/border_vip"
            android:elevation="2dp"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp">

            <!-- Shipping Address -->
            <LinearLayout
                android:id="@+id/btn_shipping_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/address" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Địa chỉ giao hàng đã lưu"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <!-- Purchase History -->
            <LinearLayout
                android:id="@+id/btn_purchase_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/history" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Lịch sử đơn hàng"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thu thập"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:textColor="@color/black"
            android:background="@color/back_ground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_vip"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <!-- My Vouchers -->
            <LinearLayout
                android:id="@+id/btn_vouchers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/discount" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vouchers giảm giá"
                    android:layout_marginStart="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <!-- Customer Support -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chăm sóc khách hàng"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:textColor="@color/black"
            android:background="@color/back_ground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_vip"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <!-- Feedback / Contact -->
            <LinearLayout
                android:id="@+id/btn_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/contact" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá / Liên hệ"
                    android:layout_marginStart="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:textColor="@color/white"
            android:backgroundTint="@color/green_smoke"
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:paddingVertical="14dp"
            android:textSize="16sp"
            android:gravity="center"
            app:cornerRadius="10dp"/>
    </LinearLayout>
</ScrollView>