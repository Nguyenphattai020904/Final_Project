<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="50dp"
            android:background="@color/back_ground"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/logo_main" />

        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/txt_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_edit_text"
            android:hint="Enter your email or phone"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/textViewSecurityQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security Question:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/txt_security_question"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_edit_text"
            android:hint="Enter your security question"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/textViewSecurityAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security Answer:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/txt_security_answer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_edit_text"
            android:hint="Enter your security answer"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btn_recover"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/green_smoke"
            android:text="Recover Password"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/btn_back_to_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/black"
            android:text="Back to Log In"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>
