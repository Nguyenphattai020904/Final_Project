<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_ground">

    <!-- Header: Thanh tìm kiếm + Chuông thông báo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@color/green_smoke"
        android:elevation="4dp"
        android:layout_marginBottom="12dp">

        <!-- Thanh tìm kiếm -->
        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/search_bar_background"
            android:drawablePadding="8dp"
            android:hint="Search by name, category, or main category"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="14sp" />

        <!-- Nút tìm kiếm -->
        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:background="@android:color/transparent"
            android:contentDescription="Search"
            android:layout_marginStart="8dp" />

        <!-- Chuông thông báo -->
        <FrameLayout
            android:id="@+id/frame_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp">

            <ImageButton
                android:id="@+id/btnNotification"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="-20dp"
                android:background="@color/green_smoke"
                android:contentDescription="@string/notification"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/notifications"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tvNotificationBadge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end|top"
                android:background="@drawable/badge_background"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Danh mục sản phẩm -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <Button
                    android:id="@+id/btn_bread_flour"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="Bread &amp; Flour-Based Foods"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/green_smoke"
                    android:layout_margin="4dp"
                    android:paddingHorizontal="8dp"
                    app:cornerRadius="16dp" />

                <Button
                    android:id="@+id/btn_drinks"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="Drinks"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/green_smoke"
                    android:layout_margin="4dp"
                    android:paddingHorizontal="8dp"
                    app:cornerRadius="16dp" />

                <Button
                    android:id="@+id/btn_food_ingredients"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="Food &amp; Ingredients"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/green_smoke"
                    android:layout_margin="4dp"
                    android:paddingHorizontal="8dp"
                    app:cornerRadius="16dp" />

                <Button
                    android:id="@+id/btn_others"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="Others"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/green_smoke"
                    android:layout_margin="4dp"
                    android:paddingHorizontal="8dp"
                    app:cornerRadius="16dp" />

                <Button
                    android:id="@+id/btn_processed_foods"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="Processed &amp; Ready-to-Eat Foods"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/green_smoke"
                    android:layout_margin="4dp"
                    android:paddingHorizontal="8dp"
                    app:cornerRadius="16dp" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Banner quảng cáo / Image Carousel -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/carousel_view_pager"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp" />

        <!-- Tiêu đề danh sách sản phẩm -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All products"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:paddingHorizontal="4dp"
            android:layout_marginBottom="8dp" />

        <!-- RecyclerView danh sách sản phẩm -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:clipToPadding="false"
            android:paddingHorizontal="4dp"
            android:paddingBottom="16dp"
            android:scrollbars="vertical" />
    </LinearLayout>
</LinearLayout>