<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Thanh tìm kiếm và biểu tượng menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:contentDescription="Menu Icon"
            android:src="@drawable/ic_menu" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="What are you looking for?"
            android:padding="8dp"
            android:background="@drawable/search_bar_background"
            android:drawableLeft="@drawable/ic_search"
            android:contentDescription="Search Bar" />
    </LinearLayout>

    <!-- Các nút danh mục -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green_smoke"
            android:text="Fresh Food"
            android:textSize="14sp"
            app:cornerRadius="20px" />

        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="@color/green_smoke"
            android:text="Dry Food"
            app:cornerRadius="20px" />

        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green_smoke"
            android:text="Beverages"
            android:textSize="14sp"
            app:cornerRadius="20px" />

        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green_smoke"
            android:text="Spices"
            app:cornerRadius="14px" />
    </LinearLayout>


    <!-- Image carousel placeholder -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/image_carousel_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image Carousel"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Navigation dots -->
            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/nav_dot"
                android:layout_margin="4dp" />
            <!-- Thêm các View khác cho các dots -->
        </LinearLayout>
    </LinearLayout>

    <!-- Danh sách sản phẩm -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Best Sales"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:scrollbars="vertical" />



</LinearLayout>
