<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <!-- Checkbox -->
    <CheckBox
        android:id="@+id/checkBoxVoucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <!-- Voucher Details -->
    <LinearLayout
        android:id="@+id/voucherContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="vertical">

        <!-- Discount Text -->
        <TextView
            android:id="@+id/tvVoucherDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount 20%"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FF5722"/>

        <!-- Condition -->
        <TextView
            android:id="@+id/tvVoucherCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum order: â‚«200,000"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"/>

        <!-- Expiry Date -->
        <TextView
            android:id="@+id/tvVoucherExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expires: 31/03/2025"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</LinearLayout>
