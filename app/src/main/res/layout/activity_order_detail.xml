<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F2FAE0">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chi tiết lịch sử đơn hàng"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/green_smoke"
        android:layout_gravity="center" />

    <!-- Order Information -->
    <TextView
        android:id="@+id/tvDetailOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã đơn hàng: #123456"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <!-- Order Status -->
    <TextView
        android:id="@+id/tvDetailOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng thái: Đang xử lý"
        android:textSize="16sp"
        android:textColor="#2196F3"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvDetailTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng giá tiền: ₫128,745"
        android:textSize="16sp"
        android:textColor="#FF5722"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOrderProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Reorder Button -->
    <Button
        android:id="@+id/btnReorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FF5722"
        android:text="Mua lại"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:cornerRadius="10dp"/>
</LinearLayout>