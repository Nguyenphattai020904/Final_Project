<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin thanh toán"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Danh sách sản phẩm -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách sản phẩm:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/order_items_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp" />

        <!-- Tổng chi phí -->
        <TextView
            android:id="@+id/txt_total_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng chi phí: 0 VND"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Full Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ tên:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/edt_full_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_edit_text"
            android:hint="Nhập họ tên"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginBottom="15dp" />

        <!-- Address -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ giao hàng:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/edt_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_edit_text"
            android:hint="Nhập địa chỉ giao hàng"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            android:layout_marginBottom="15dp" />

        <!-- Phone Number -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SĐT:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/edt_phone_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_edit_text"
            android:hint="Nhập SĐT"
            android:inputType="phone"
            android:padding="12dp"
            android:layout_marginBottom="20dp" />

        <!-- Payment method -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phương thức thanh toán:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp" />

        <RadioGroup
            android:id="@+id/rg_payment_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <RadioButton
                android:id="@+id/rb_cod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán khi nhận hàng"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/rb_zalo_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZaloPay"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </RadioGroup>

        <!-- Confirm Order Button -->
        <Button
            android:id="@+id/btn_confirm_order"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/green_smoke"
            android:text="Xác nhận đơn hàng"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="15dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btn_cancel_order"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/black"
            android:text="Huỷ bỏ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>